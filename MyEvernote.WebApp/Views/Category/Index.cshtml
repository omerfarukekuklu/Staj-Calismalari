@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
    string time;
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @BootstrapHelper.LinkButton("/Category/Create/", "primary", string.Empty, string.Empty,
                   "plus", "Yeni")
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @{ time = item.CreatedOn.ToString("dd.MM.yyyy HH:mm");}
                        @Html.DisplayFor(modelItem => time)
                    </td>
                    <td>
                        @{ time = item.ModifiedOn.ToString("dd.MM.yyyy HH:mm");}
                        @Html.DisplayFor(modelItem => time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        @BootstrapHelper.LinkButton("/Category/Edit/" + item.Id, "warning", "btn-xs", "Düzenle",
                       "edit", string.Empty)

                        @BootstrapHelper.LinkButton("/Category/Details/" + item.Id, "info", "btn-xs", "Detay",
                       "search", string.Empty)

                        @BootstrapHelper.LinkButton("/Category/Delete/" + item.Id, "danger", "btn-xs", "Sil",
                       "trash", string.Empty)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

