
@{
    ViewBag.Title = "Hata Oluştu";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @{ 
            Exception ex = null;

            if(TempData["LastError"] != null)
            {
                ex = TempData["LastError"] as Exception;
            }
        }
        <h1><span class="glyphicon glyphicon-remove"></span> @ViewBag.Title</h1>
        <p>
            Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
            <br /><br /><br />
            @if(ex != null)
            {
                <strong>Hata Detay : </strong>
                @ex.Message
                <br /><br /><br />
            }
            @BootstrapHelper.LinkButton("/Home/Index", "default", "", "", "home", "Anasayfaya Git")
            @BootstrapHelper.LinkButton("mailto:omerfarukekuklu@gmail.com", "primary", "", "", "envelope", "Hatayı Bildir")
        </p>
    </div>
</div>


