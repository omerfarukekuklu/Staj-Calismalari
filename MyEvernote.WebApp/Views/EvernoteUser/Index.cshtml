@model IEnumerable<MyEvernote.Entities.EvernoteUser>

@{
    ViewBag.Title = "Kullanıcılar";
    string time;
}

<div class="row">
    <div class="col-md-10 col-md-push-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-push-1">
        <p>
            @BootstrapHelper.LinkButton("/EvernoteUser/Create/", "primary", string.Empty, string.Empty,
                   "plus", "Yeni")           
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @{ time = item.CreatedOn.ToString("dd.MM.yyyy HH:mm");}
                    @Html.DisplayFor(modelItem => time)
                </td>
                <td>
                    @{ time = item.ModifiedOn.ToString("dd.MM.yyyy HH:mm");}
                    @Html.DisplayFor(modelItem => time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUsername)
                </td>
                <td width="150">
                    @BootstrapHelper.LinkButton("/EvernoteUser/Edit/" + item.Id, "warning", "btn-xs", "Düzenle",
                   "edit", string.Empty)

                    @BootstrapHelper.LinkButton("/EvernoteUser/Details/" + item.Id, "info", "btn-xs", "Detay",
                   "search", string.Empty)

                    @BootstrapHelper.LinkButton("/EvernoteUser/Delete/" + item.Id, "danger", "btn-xs", "Sil",
                   "trash", string.Empty)
                </td>
            </tr>
            }
        </table>
    </div>
</div>
