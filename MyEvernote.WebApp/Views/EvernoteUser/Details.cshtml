    </div>
    <div class="col-md-8 col-md-offset-2 col-md-push-1">
        <p>
            @BootstrapHelper.LinkButton("/EvernoteUser/Edit/" + Model.Id, "warning", string.Empty, string.Empty,
                       "edit", "Düzenle")

            @BootstrapHelper.LinkButton("/EvernoteUser/Index/", "default", string.Empty, string.Empty,
                       "circle-arrow-left", "Geri")
